<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView_name_add_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_desc_add_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Description"
        android:layout_below="@+id/button_photo_select_add_p"
        android:layout_alignStart="@+id/textView_category_add_p"/>

    <EditText
        android:id="@+id/EditText_name_add_p"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/textView_name_add_p"
        android:layout_alignBottom="@+id/textView_name_add_p"
        android:layout_alignStart="@+id/spinner_category_add_p"/>

    <EditText
        android:id="@+id/EditText_desc_add_p"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView_desc_add_p"
        android:layout_alignStart="@+id/textView_desc_add_p"/>

    <TextView
        android:id="@+id/textView_category_add_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Category"
        android:layout_below="@+id/EditText_name_add_p"
        android:layout_alignStart="@+id/textView_name_add_p"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spinner_category_add_p"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_category_add_p"
        android:layout_toEndOf="@+id/textView_desc_add_p"/>

    <TextView
        android:id="@+id/textView_date_add_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Date"
        android:layout_alignBaseline="@+id/button_date_add_p"
        android:layout_alignBottom="@+id/button_date_add_p"
        android:layout_alignStart="@+id/EditText_desc_add_p"/>

    <Button
        android:id="@+id/button_date_add_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select date"
        android:layout_below="@+id/EditText_desc_add_p"
        android:layout_toEndOf="@+id/textView_name_add_p"/>

    <TextView
        android:id="@+id/textView_photo_add_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picture"
        android:textSize="18dp"
        android:layout_alignTop="@+id/EditText_name_add_p"
        android:layout_toEndOf="@+id/EditText_name_add_p"
        android:layout_marginStart="13dp"/>

    <Button
        android:id="@+id/button_photo_take_add_p"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_alignTop="@+id/textView_photo_add_p"
        android:layout_toEndOf="@+id/textView_photo_add_p"
        android:layout_marginStart="12dp"/>

    <Button
        android:id="@+id/button_photo_select_add_p"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Album"
        android:layout_alignTop="@+id/spinner_category_add_p"
        android:layout_alignStart="@+id/button_photo_take_add_p"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add_add_p"
        android:text="Add new item"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView_date_add_p"
        android:layout_marginStart="11dp"/>

    <ImageView
        android:id="@+id/imageView_add_p"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView_selectedPicture_add_p"
        android:layout_alignStart="@+id/textView_selectedPicture_add_p"/>

    <TextView
        android:id="@+id/textView_selectedPicture_add_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Selected picture:"
        android:layout_alignBaseline="@+id/button_date_add_p"
        android:layout_alignBottom="@+id/button_date_add_p"
        android:layout_toStartOf="@+id/textView_photo_add_p"/>

</RelativeLayout>