<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="hu.uniobuda.nik.guideme.DetailsActivity">

    <TextView
        android:id="@+id/textView_details_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_details_year_label"
        android:layout_marginTop="17dp"/>

    <TextView
        android:id="@+id/textView_details_desc_label"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView_details_year_label"
        android:layout_alignStart="@+id/textView_details_year_label"/>

    <TextView
        android:id="@+id/textView_details_year_label"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Built in:"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView_details_name_label"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView_details_desc_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_details_desc_label"
        android:layout_below="@+id/textView_details_desc_label"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/textView_details_name_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_alignTop="@+id/textView_details_name_label"
        android:layout_marginStart="19dp"
        android:layout_alignEnd="@+id/textView_details_desc_content"
    android:layout_toEndOf="@+id/textView_details_year_label"/>

    <TextView
        android:id="@+id/textView_details_year_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_above="@+id/textView_details_desc_label"
        android:layout_alignStart="@+id/textView_details_name_content"
        android:layout_alignEnd="@+id/textView_details_desc_content"/>

    <TextView
        android:id="@+id/textView_details_image_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Picture:"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/ratingBar_details"
        android:layout_alignStart="@+id/textView_details_desc_content"
        android:layout_toStartOf="@+id/textView_details_year_content"/>

    <ImageView
        android:id="@+id/imageView_details_image_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_details_image_label"
        android:layout_below="@+id/textView_details_image_label"
        android:layout_marginTop="13dp"/>

    <RatingBar
        android:id="@+id/ratingBar_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView_details_desc_content"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
